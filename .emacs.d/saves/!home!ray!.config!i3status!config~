###############################################################################
# i3 status config
# see "man i3status" for documentation.
#
# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!
###############################################################################

general {
    output_format   = 'none'
    interval        = 5
    colors	    = true
    color_good      = '#ffffff'
    color_degraded  = '#ffffff'
    color_bad       = '#e89393'
    separator       = " | "
}

order += "volume master"
#order += "disk /"
#order += "disk /home"
#order += "ipv6"
order += "wireless wlan0"
#order += "ethernet enp0s25"
order += "battery 0"
order += "cpu_temperature all"
order += "cpu_usage all"
order += "memory"
order += "load"
order += "tztime local"

wireless wlan0 {
    format_up = "%essid %ip" #" %essid %ip"
    format_down = "WiFi down!"
}

ethernet enp0s25 {
    #if you use %speed, i3status requires root privileges
    format_up = "E %ip" #" %ip"
    format_down = ""
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    last_full_capacity = true
    Integer_battery_capacity = true
    low_threshold = 20
    threshold_type = percentage
    hide_seconds = true
    status_chr = "CHR" #""
    status_bat = "BAT" #""
    status_unk = "UNK" #""
    status_full = "FUL"#""
}

tztime local {
    format = "%a %b %e %I:%M%P" #" %a %b %e %I:%M%P"
}

load {
    format = "LOAD %1min %5min %15min" #" %1min"
}

cpu_usage {
    format = "CPU %usage" #" %usage"
}

memory {
    format = "MEM %percentage_used" #" %used"
    decimals = 0
}

cpu_temperature all {
	format = "TEMP %degrees°C" #" %degrees°C"
}

disk "/" {
	format = " %avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
}

volume master {
    format = "VOL %volume" #"%volume "
    format_muted = "VOL MUT" #" "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
